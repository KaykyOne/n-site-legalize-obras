---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/button";
import {
    WhatsappShareButton,
    WhatsappIcon,
    FacebookShareButton,
    FacebookIcon,
} from "react-share";

const basePath = import.meta.env.BASE_URL;
const { id } = Astro.params;
const API_URL = 'https://vps57731.publiccloud.com.br/blog';

// Dados de exemplo para as postagens do blog
let posts : any = []

try {
  const res = await fetch(`${API_URL}/api/posts?populate=*`);
  const data = await res.json();
  posts = data.data || [];
} catch (error) {
  console.error("Erro ao buscar posts:", error);
}

// Buscar o post pelo ID
const post = posts.find((p: any) => p.id === parseInt(id || "0"));

// Se o post não existir, redirecionar para a página de blog
if (!post) {
    return Astro.redirect(`${basePath}blog`);
}

// Posts relacionados (mesma categoria, excluindo o atual)
const relatedPosts = posts
    .filter((p: any) => p.category === post.category && p.id !== post.id)
    .slice(0, 3);

export async function getStaticPaths() {
    return [
        { params: { id: "1" } },
        { params: { id: "2" } },
        { params: { id: "3" } },
        { params: { id: "4" } },
        { params: { id: "5" } },
        { params: { id: "6" } },
    ];
}
---

<Layout>
    <div class="w-full min-h-screen bg-gray-50">
        <!-- Header da Postagem -->
        <div class="relative">
            <div class="absolute w-full h-full">
                <div
                    class="absolute bg-black/60 w-full h-full backdrop-blur-sm"
                >
                </div>
                <img
                    class="w-full h-full object-cover"
                    src={post.image}
                    alt={post.title}
                />
            </div>

            <div
                class="relative px-6 md:px-20 lg:px-40 py-20 md:py-32 text-white"
            >
                <!-- Breadcrumb -->
                <div class="mb-6 flex items-center gap-2 text-sm">
                    <a
                        href={`${basePath}`}
                        class="hover:text-primary-color transition-colors"
                        >Home</a
                    >
                    <span>/</span>
                    <a
                        href={`${basePath}blog`}
                        class="hover:text-primary-color transition-colors"
                        >Blog</a
                    >
                    <span>/</span>
                    <span class="text-gray-300">{post.title}</span>
                </div>

                <!-- Categoria -->
                <div class="mb-4">
                    <span
                        class="bg-primary-color text-white px-4 py-2 rounded-sm text-sm font-semibold uppercase"
                    >
                        {post.category}
                    </span>
                </div>

                <!-- Título -->
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 max-w-4xl"
                >
                    {post.title}
                </h1>

                <!-- Meta informações -->
                <div class="flex flex-wrap items-center gap-6 text-gray-200">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined">person</span>
                        <span>{post.author}</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined"
                            >calendar_today</span
                        >
                        <span
                            >{
                                new Date(post.date).toLocaleDateString(
                                    "pt-BR",
                                    {
                                        day: "numeric",
                                        month: "long",
                                        year: "numeric",
                                    },
                                )
                            }</span
                        >
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined">schedule</span>
                        <span>{post.readTime} de leitura</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Conteúdo da Postagem -->
        <div class="px-6 md:px-20 lg:px-40 py-12">
            <div class="max-w-4xl mx-auto">
                <!-- Excerpt -->
                <div
                    class="bg-primary-color/10 border-l-4 border-primary-color p-6 mb-8 rounded-r-lg"
                >
                    <p class="text-lg text-gray-700 italic">
                        {post.excerpt}
                    </p>
                </div>

                <!-- Conteúdo principal -->
                <article class="prose prose-lg max-w-none">
                    <div class="blog-content" set:html={post.content} />
                </article>

                <!-- Compartilhar -->
                <div class="mt-12 pt-8 border-t border-gray-300">
                    <h3 class="text-xl font-bold mb-4 text-secondary-color">
                        Compartilhe este artigo
                    </h3>
                    <div class="flex flex-col md:flex-row gap-4">
                        <WhatsappShareButton url={import.meta.url} title={"blog"}>
                            <WhatsappIcon size={32} round />
                        </WhatsappShareButton>

                        <FacebookShareButton url={import.meta.url} title={"blog"}>
                            <FacebookIcon size={32} round />
                        </FacebookShareButton>
                    </div>
                </div>
            </div>
        </div>

        <!-- Posts Relacionados -->
        {
            relatedPosts.length > 0 && (
                <div class="px-6 md:px-20 lg:px-40 py-16 bg-white">
                    <h2 class="text-3xl md:text-4xl font-bold mb-8 text-secondary-color text-center">
                        Artigos Relacionados
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                        {relatedPosts.map((relatedPost: any) => (
                            <article class="bg-gray-50 rounded-lg overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
                                <div class="relative h-48 overflow-hidden">
                                    <img
                                        src={relatedPost.image}
                                        alt={relatedPost.title}
                                        class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                                    />
                                    <div class="absolute top-4 left-4">
                                        <span class="bg-primary-color text-white px-3 py-1 rounded-sm text-xs font-semibold uppercase">
                                            {relatedPost.category}
                                        </span>
                                    </div>
                                </div>

                                <div class="p-6">
                                    <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                                        <span class="material-symbols-outlined text-sm">
                                            schedule
                                        </span>
                                        {relatedPost.readTime}
                                    </div>

                                    <h3 class="text-lg font-bold text-secondary-color mb-3 leading-tight hover:text-primary-color transition-colors">
                                        {relatedPost.title}
                                    </h3>

                                    <a
                                        href={`${basePath}blog/${relatedPost.id}`}
                                        class="inline-flex items-center gap-2 text-primary-color font-semibold text-sm uppercase hover:gap-3 transition-all duration-200"
                                    >
                                        Ler mais
                                        <span class="material-symbols-outlined text-lg">
                                            arrow_forward
                                        </span>
                                    </a>
                                </div>
                            </article>
                        ))}
                    </div>
                </div>
            )
        }

        <!-- CTA Section -->
        <div
            class="px-6 md:px-20 lg:px-40 py-16 bg-linear-to-r from-secondary-color to-primary-color"
        >
            <div class="text-center text-white max-w-4xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Gostou do conteúdo? Fale com nossos especialistas!
                </h2>
                <p class="text-lg mb-8 text-gray-200">
                    Nossa equipe está pronta para ajudar sua empresa a
                    economizar e regularizar suas obras
                </p>
                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center items-center"
                >
                    <Button
                        type={"transparente"}
                        className={"text-lg! sm:text-xl! font-normal! uppercase! flex items-center justify-center"}
                    >
                        <img
                            src={`${basePath}/icon-whatsapp.png`}
                            alt="WhatsApp Icon"
                            class="w-5 h-5 mr-2 group-hover:invert"
                        />
                        FALE COM UM ESPECIALISTA
                    </Button>
                    <Button type={"whatsapp"} href={`${basePath}/blog`}>
                        Voltar ao Blog
                    </Button>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .blog-content {
        color: #374151;
        line-height: 1.8;
    }

    .blog-content h2 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--secondary-color);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .blog-content h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--secondary-color);
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .blog-content p {
        margin-bottom: 1.25rem;
        font-size: 1.125rem;
    }

    .blog-content ul,
    .blog-content ol {
        margin-left: 2rem;
        margin-bottom: 1.25rem;
    }

    .blog-content li {
        margin-bottom: 0.5rem;
        font-size: 1.125rem;
    }

    .blog-content ul li {
        list-style-type: disc;
    }

    .blog-content ol li {
        list-style-type: decimal;
    }

    .blog-content strong {
        font-weight: 600;
        color: var(--secondary-color);
    }

    .blog-content a {
        color: var(--primary-color);
        text-decoration: underline;
    }

    .blog-content a:hover {
        color: var(--secondary-color);
    }

    /* Responsividade para prose */
    @media (max-width: 768px) {
        .blog-content h2 {
            font-size: 1.75rem;
        }

        .blog-content h3 {
            font-size: 1.25rem;
        }

        .blog-content p,
        .blog-content li {
            font-size: 1rem;
        }
    }
</style>
