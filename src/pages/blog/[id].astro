---
import Layout from "../../layouts/Layout.astro";
import BlogPostPage from "../../components/BlogPostPage.tsx";

// Esta página será renderizada no servidor (SSR)
export const prerender = false;

const { id } = Astro.params;

// Verificar se o ID existe
if (!id) {
  return Astro.redirect('/blog');
}
---

<Layout>
  <BlogPostPage id={id} client:load />
</Layout>

<style>
    .blog-content {
        color: #374151;
        line-height: 1.8;
    }

    .blog-content h2 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--secondary-color);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .blog-content h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--secondary-color);
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .blog-content p {
        margin-bottom: 1.25rem;
        font-size: 1.125rem;
    }

    .blog-content ul,
    .blog-content ol {
        margin-left: 2rem;
        margin-bottom: 1.25rem;
    }

    .blog-content li {
        margin-bottom: 0.5rem;
        font-size: 1.125rem;
    }

    .blog-content ul li {
        list-style-type: disc;
    }

    .blog-content ol li {
        list-style-type: decimal;
    }

    .blog-content strong {
        font-weight: 600;
        color: var(--secondary-color);
    }

    .blog-content a {
        color: var(--primary-color);
        text-decoration: underline;
    }

    .blog-content a:hover {
        color: var(--secondary-color);
    }

    /* Responsividade para prose */
    @media (max-width: 768px) {
        .blog-content h2 {
            font-size: 1.75rem;
        }

        .blog-content h3 {
            font-size: 1.25rem;
        }

        .blog-content p,
        .blog-content li {
            font-size: 1rem;
        }
    }
</style>