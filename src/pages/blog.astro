---
import Layout from '../layouts/Layout.astro';
import Button from '../components/button';
import ContactButton from '../components/ContactButton';


const API_URL = 'https://vps62603.publiccloud.com.br';

// SEO Meta Tags para Página Blog
const pageTitle = "Blog - Legalize Obras | Guia de Legalização e Tributação de Obras";
const pageDescription = "Seu guia definitivo para economia e segurança fiscal na construção civil. Artigos sobre INSS de obras, regularização, legislação e cases de sucesso em planejamento tributário.";
const pageKeywords = "blog construção civil, artigos INSS obras, guia legalização obras, dicas tributação construção, cases sucesso obras";

// Dados de exemplo para as postagens do blog
let posts : any = []

try {
  const res = await fetch(`${API_URL}/api/posts?populate=*`);
  const data = await res.json();
  posts = data.data || [];
} catch (error) {
  //console.error("Erro ao buscar posts:", error);
}

const categories = ["Todas", "Economia", "Regularização", "Legislação", "Documentação", "Cases", "Gestão"];
---

<Layout 
    title={pageTitle}
    description={pageDescription}
    keywords={pageKeywords}
>
    <div class="w-full min-h-screen flex flex-col bg-gray-50">
        <!-- Hero Section -->
        <div class="relative">
            <div class="absolute w-full h-full">
                <div class="absolute bg-black/70 w-full h-full backdrop-blur-sm"></div>
                <img class="w-full h-full object-cover" src={`/img-back-home.png`} alt="Fundo"/>
            </div>

            <div class="relative flex flex-col px-6 md:px-20 lg:px-40">
                <div class="pt-32 md:pt-40 pb-20 md:pb-32 text-white z-10 text-center md:text-left">
                    <h4 class="text-2xl sm:text-3xl md:text-4xl font-semibold mb-2 text-gray-300">Nosso</h4>
                    <h1 class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl uppercase font-bold leading-tight mb-4">
                        BLOG LEGALIZAÇÃO E TRIBUTAÇÃO DE OBRAS 
                    </h1>
                    <p class="text-neutral-300 mt-6 text-base sm:text-lg max-w-2xl">
                        O Seu Guia Definitivo para Economia e Segurança Fiscal na Construção Civil. 
                    </p>
                </div>
            </div>
        </div>

        <!-- Barra de Pesquisa e Filtros -->
        <div class="px-6 md:px-20 lg:px-40 py-8 bg-white border-b border-gray-200 fade-in-contrario">
            <!-- Campo de Pesquisa -->
            <div class="mb-6">
                <div class="relative max-w-md mx-auto md:mx-0">
                    <input 
                        type="text" 
                        id="searchInput"
                        placeholder="Pesquisar por título..."
                        class="w-full px-4 py-3 pl-12 rounded-lg border-2 border-gray-300 focus:border-primary-color focus:outline-none transition-colors"
                    />
                    <span class="absolute left-4 top-1/2 transform -translate-y-1/2 material-symbols-outlined text-gray-400">
                        search
                    </span>
                </div>
            </div>
            
            <!-- Filtros de Categoria -->
            <div class="flex flex-wrap gap-3 justify-center md:justify-start">
                {categories.map((category) => (
                    <button 
                        class="category-filter px-6 py-2 rounded-sm border-2 border-primary-color text-primary-color hover:bg-primary-color hover:text-white transition-all duration-200 font-semibold text-sm uppercase"
                        data-category={category}
                    >
                        {category}
                    </button>
                ))}
            </div>
        </div>

        <!-- Grid de Postagens -->
        <div class="px-6 md:px-20 lg:px-40 py-12 fade-in-contrario">
            <!-- Mensagem quando nenhum post é encontrado -->
            <div id="noResults" class="hidden text-center py-12">
                <span class="material-symbols-outlined text-6xl text-gray-300 mb-4">search_off</span>
                <h3 class="text-2xl font-semibold text-gray-500 mb-2">Nenhum artigo encontrado</h3>
                <p class="text-gray-400">Tente pesquisar com outros termos ou selecione uma categoria diferente.</p>
            </div>
            
            <div id="postsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {posts.map((post: any) => (
                    <a href={`/blog/${post.id}`} class="group post-card" data-title={post.title.toLowerCase()} data-category={post.category}>
                        <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 cursor-pointer border border-gray-200">
                            <!-- Imagem do Post -->
                            <div class="relative h-48 overflow-hidden">
                            <img 
                                src={`${API_URL}${post.coverImage.url}`} 
                                alt={post.title}
                                class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                            />
                            <div class="absolute top-4 left-4">
                                <span class="bg-primary-color text-white px-3 py-1 rounded-sm text-xs font-semibold uppercase">
                                    {post.category}
                                </span>
                            </div>
                        </div>

                        <!-- Conteúdo do Card -->
                        <div class="p-6">
                            <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                                <span class="flex items-center gap-1">
                                    <span class="material-symbols-outlined text-sm">calendar_today</span>
                                    {new Date(post.publicadoEm).toLocaleDateString('pt-BR')}
                                </span>
                            </div>

                            <h3 class="text-xl font-bold capitalize text-secondary-color mb-3 leading-tight hover:text-primary-color transition-colors">
                                {post.title}
                            </h3>

                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                                {post.content}
                            </p>

                            <div class="inline-flex items-center gap-2 text-primary-color font-semibold text-sm uppercase group-hover:gap-3 transition-all duration-200">
                                Ler mais
                                <span class="material-symbols-outlined text-lg">arrow_forward</span>
                            </div>
                        </div>
                    </article>
                    </a>
                ))}
            </div>
        </div>

        <!-- CTA Section -->
        <div class="px-6 md:px-20 lg:px-40 py-16 bg-linear-to-r from-secondary-color to-primary-color">
            <div class="text-center text-white">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Descubra o Potencial de Redução de até 80% na Sua Obra!
                </h2>
                <p class="text-lg mb-8 text-gray-200">
                    Nossos especialistas farão o <strong>Diagnóstico Gratuito</strong> da sua construção. Sem compromisso e com garantia de segurança fiscal.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <ContactButton
                        client:load
                        type="transparente"
                        className="text-lg! sm:text-xl! font-normal! uppercase! flex items-center justify-center"
                    >
                        <img
                            src={`/icon-whatsapp.png`}
                            alt="WhatsApp Icon"
                            class="w-5 h-5 mr-2 group-hover:invert"
                        />
                        SIMULE SUA ECONOMIA GRÁTIS AGORA
                    </ContactButton>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Estilos para o campo de pesquisa */
    #searchInput:focus {
        box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb), 0.1);
    }
    
    /* Transições suaves para os cards */
    .post-card {
        transition: all 0.3s ease;
    }
    
    /* Estilos para filtros ativos */
    .category-filter.active {
        background-color: var(--primary-color);
        color: white;
    }
    
    /* Animação para mensagem de "nenhum resultado" */
    #noResults {
        animation: fadeIn 0.3s ease-in-out;
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Responsividade melhorada para o campo de pesquisa */
    @media (max-width: 768px) {
        #searchInput {
            font-size: 16px; /* Evita zoom em iOS */
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput') as HTMLInputElement;
        const categoryFilters = document.querySelectorAll('.category-filter');
        const postCards = document.querySelectorAll('.post-card') as NodeListOf<HTMLElement>;
        const noResults = document.getElementById('noResults') as HTMLElement;
        const postsGrid = document.getElementById('postsGrid') as HTMLElement;

        function normalizeText(text: any) {
            return text
                .normalize("NFD")
                .replace(/[\u0300-\u036f]/g, "") // remove acentos
                .toLowerCase()
                .trim();
        }
        
        if (!searchInput || !noResults || !postsGrid) return;
        
        let activeCategory = 'Todas';
        
        // Função para filtrar posts
        function filterPosts() {
            const searchTerm = normalizeText(searchInput.value);
            let visiblePosts = 0;
            
            //console.log('Filtrando posts com categoria:', activeCategory);
            //console.log('Termo de busca:', searchTerm);
            
            postCards.forEach((card) => {
                const title = normalizeText(card.getAttribute('data-title') || '');
                const category = card.getAttribute('data-category') || '';
                
                //console.log('Post:', { title: title.substring(0, 20) + '...', category });
                
                // Verificar se corresponde ao termo de pesquisa
                const matchesSearch = title.includes(searchTerm);
                
                // Verificar se corresponde à categoria (case-sensitive para manter exatidão)
                const matchesCategory = activeCategory === 'todas' || normalizeText(category) === activeCategory;
                
                //console.log('Matches:', { search: matchesSearch, category: matchesCategory });
                
                // Mostrar ou ocultar o card
                if (matchesSearch && matchesCategory) {
                    card.style.display = 'block';
                    visiblePosts++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            //console.log('Posts visíveis:', visiblePosts);
            
            // Mostrar ou ocultar mensagem "nenhum resultado"
            if (visiblePosts === 0) {
                noResults.classList.remove('hidden');
                postsGrid.style.display = 'none';
            } else {
                noResults.classList.add('hidden');
                postsGrid.style.display = 'grid';
            }
        }
        
        // Event listener para pesquisa
        searchInput.addEventListener('input', filterPosts);
        
        // Event listeners para filtros de categoria
        categoryFilters.forEach((filter) => {
            const filterElement = filter as HTMLElement;
            
            // Marcar o primeiro filtro como ativo
            if (filterElement.getAttribute('data-category') === 'Todas') {
                filterElement.classList.add('bg-primary-color', 'text-white');
                filterElement.classList.remove('text-primary-color');
            }
            
            filterElement.addEventListener('click', function() {
                //console.log('Filtro clicado:', normalizeText(filterElement.getAttribute('data-category')));
                
                // Remover classe ativa de todos os filtros
                categoryFilters.forEach((f) => {
                    const fElement = f as HTMLElement;
                    fElement.classList.remove('bg-primary-color', 'text-white');
                    fElement.classList.add('text-primary-color');
                });
                
                // Adicionar classe ativa ao filtro clicado
                filterElement.classList.add('bg-primary-color', 'text-white');
                filterElement.classList.remove('text-primary-color');
                
                // Atualizar categoria ativa
                activeCategory = normalizeText(filterElement.getAttribute('data-category')) || 'Todas';
                //console.log('Categoria ativa:', activeCategory);
                
                // Filtrar posts
                filterPosts();
            });
        });
        
        // Limpar pesquisa quando categoria "Todas" for selecionada
        categoryFilters.forEach((filter) => {
            const filterElement = filter as HTMLElement;
            if (filterElement.getAttribute('data-category') === 'Todas') {
                filterElement.addEventListener('click', function() {
                    searchInput.value = '';
                });
            }
        });
    });
</script>

