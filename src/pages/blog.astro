---
import Layout from '../layouts/Layout.astro';
import ContactButton from '../components/ContactButton';
import BlogPosts from '../components/BlogPosts.tsx';

// SEO Meta Tags para Página Blog
const pageTitle = "Blog - Legalize Obras | Guia de Legalização e Tributação de Obras";
const pageDescription = "Seu guia definitivo para economia e segurança fiscal na construção civil. Artigos sobre INSS de obras, regularização, legislação e cases de sucesso em planejamento tributário.";
const pageKeywords = "blog construção civil, artigos INSS obras, guia legalização obras, dicas tributação construção, cases sucesso obras";
---

<Layout 
    title={pageTitle}
    description={pageDescription}
    keywords={pageKeywords}
>
    <div class="w-full min-h-screen flex flex-col bg-gray-50">
        <!-- Hero Section -->
        <div class="relative">
            <div class="absolute w-full h-full">
                <div class="absolute bg-black/70 w-full h-full backdrop-blur-sm"></div>
                <img class="w-full h-full object-cover" src={`/img-back-home.png`} alt="Fundo"/>
            </div>

            <div class="relative flex flex-col px-6 md:px-20 lg:px-40">
                <div class="pt-32 md:pt-40 pb-20 md:pb-32 text-white z-10 text-center md:text-left">
                    <h4 class="text-2xl sm:text-3xl md:text-4xl font-semibold mb-2 text-gray-300">Nosso</h4>
                    <h1 class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl uppercase font-bold leading-tight mb-4">
                        BLOG LEGALIZAÇÃO E TRIBUTAÇÃO DE OBRAS 
                    </h1>
                    <p class="text-neutral-300 mt-6 text-base sm:text-lg max-w-2xl">
                        O Seu Guia Definitivo para Economia e Segurança Fiscal na Construção Civil. 
                    </p>
                </div>
            </div>
        </div>

        <!-- Componente React para Posts -->
        <div class="px-6 md:px-20 lg:px-40 py-12">
            <BlogPosts client:load />
        </div>

        <!-- CTA Section -->
        <div class="px-6 md:px-20 lg:px-40 py-16 bg-linear-to-r from-secondary-color to-primary-color">
            <div class="text-center text-white">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Descubra o Potencial de Redução de até 80% na Sua Obra!
                </h2>
                <p class="text-lg mb-8 text-gray-200">
                    Nossos especialistas farão o <strong>Diagnóstico Gratuito</strong> da sua construção. Sem compromisso e com garantia de segurança fiscal.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <ContactButton
                        client:load
                        type="transparente"
                        className="text-lg! sm:text-xl! font-normal! uppercase! flex items-center justify-center"
                    >
                        <img
                            src={`/icon-whatsapp.png`}
                            alt="WhatsApp Icon"
                            class="w-5 h-5 mr-2 group-hover:invert"
                        />
                        SIMULE SUA ECONOMIA GRÁTIS AGORA
                    </ContactButton>
                </div>
            </div>
        </div>
    </div>
</Layout>


