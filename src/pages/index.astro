---
import Layout from "../layouts/Layout.astro";
import Button from "../components/button";
import Contact from "../components/contact";

const basePath = import.meta.env.BASE_URL;
---

<Layout>
    <div class="w-full min-h-screen flex flex-col">
        <div class="relative">
            <div class="absolute w-full h-full">
                <div
                    class="absolute bg-black/70 w-full h-full backdrop-blur-sm"
                >
                </div>
                <img
                    class="w-full h-full object-cover"
                    src={`${basePath}/img-back-home.png`}
                    alt="Fundo"
                />
            </div>

            <div class="relative flex flex-col px-4 sm:px-6 md:px-20 lg:px-40">
                <div
                    class="pt-24 sm:pt-32 md:pt-40 pb-16 sm:pb-20 md:pb-40 text-white z-10 text-center md:text-left"
                >
                    <h4
                        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold mb-2"
                    >
                        Pare de Pagar
                    </h4>
                    <h1
                        class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl xl:text-9xl uppercase font-bold leading-tight mb-2"
                    >
                        INSS de Obra
                    </h1>
                    <h4
                        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold mb-4"
                    >
                        Reduza Legalmente em Até 80%
                    </h4>
                    <p class="text-neutral-300 mt-4 sm:mt-6 text-sm sm:text-base md:text-lg">
                        Especialistas em contribuições de obras ao INSS
                    </p>

                    <div
                        class="flex flex-col sm:flex-row gap-5 mt-10 items-center sm:items-start justify-center md:justify-start"
                    >
                        <Button
                            type={"primario"}
                            className={"!text-lg sm:!text-xl !font-normal !uppercase w-full sm:w-auto"}
                        >
                            Saiba Mais
                        </Button>
                        <Button
                            type={"transparente"}
                            className={"!text-lg sm:!text-xl !font-normal !uppercase flex items-center justify-center w-full sm:w-auto"}
                        >
                            <img
                                src={`${basePath}/icon-whatsapp.png`}
                                alt="WhatsApp Icon"
                                class="w-5 h-5 mr-2 group-hover:invert"
                            />
                            FALE COM UM ESPECIALISTA
                        </Button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Seção com divisões: azul à esquerda, e do lado direito preto em cima e brancos embaixo -->
        <div class="px-4 sm:px-6 md:px-20 lg:px-40 -top-10 relative fade-in-contrario">
            <div
                class="min-h-[350px] sm:min-h-[400px] md:min-h-[500px] lg:min-h-[600px] flex flex-col lg:flex-row overflow-hidden border border-black rounded-lg"
            >
                <!-- Seção Azul com gradiente de baixo para cima -->
                <div
                    class="bg-linear-0 from-secondary-color to-primary-color flex-2 flex items-center justify-center p-6 sm:p-8 md:p-12"
                >
                    <div class="max-w-lg">
                        <p class="text-gray-300 text-sm md:text-base mb-2">
                            Engaje as suas construções e reformas de forma que
                            não
                        </p>
                        <h2
                            class="text-white text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight"
                        >
                            Custe tanto quanto a própria obra!
                        </h2>
                        <div class="flex gap-4 items-start mb-6">
                            <div class="w-1 bg-white h-24 shrink-0"></div>
                            <p
                                class="text-white text-sm md:text-base leading-relaxed"
                            >
                                Lorem ipsum dolor sit amet, consectetur
                                adipisicing elit. Omnis ullam qui non nihil
                                excepturi doloremque, ea, soluta, veritatis
                                eaque porro beatae! Laborum magni hic ipsam fuga
                                odit necessitatibus exercitationem consectetur!
                            </p>
                        </div>
                        <Button
                            type={"transparente"}
                            className={"!text-lg sm:!text-xl !font-normal !uppercase flex items-center justify-center"}
                        >
                            <img
                                src={`${basePath}/icon-whatsapp.png`}
                                alt="WhatsApp Icon"
                                class="w-5 h-5 mr-2 group-hover:invert"
                            />
                            FALE COM UM ESPECIALISTA
                        </Button>
                    </div>
                </div>

                <!-- Lado direito: Preto em cima, brancos embaixo -->
                <div class="flex-[1.4] flex flex-col">
                    <!-- Seção Preta -->
                    <div
                        class="bg-black flex-1 flex items-center justify-center p-8"
                    >
                        <div class="text-center p-6 lg:p-0">
                            <p
                                class="text-white text-5xl md:text-7xl font-bold"
                                id="200"
                            >
                                200%
                            </p>
                            <p class="text-white text-xl md:text-2xl mt-2">
                                de <span class="font-bold">EFICIÊNCIA</span>
                            </p>
                        </div>
                    </div>

                    <!-- Seções Brancas lado a lado -->
                    <div class="bg-white flex-1 flex flex-row">
                        <div
                            class="flex-1 flex items-center justify-center border-r border-gray-200 p-6"
                        >
                            <div class="text-center">
                                <p
                                    class="text-black text-4xl md:text-6xl font-bold mb-3"
                                    id="50"
                                >
                                    50%
                                </p>
                                <p
                                    class="text-primary-color text-lg md:text-xl whitespace-nowrap"
                                >
                                    <span class="font-bold">TEMPO</span> de processo
                                </p>
                            </div>
                        </div>
                        <div class="flex-1 flex items-center justify-center p-6">
                            <div class="text-center">
                                <p
                                    class="text-black text-4xl md:text-6xl font-bold mb-3"
                                    id="40"
                                >
                                    +40%
                                </p>
                                <p class="text-primary-color text-xl md:text-2xl">
                                    de <span class="font-bold">AGILIDADE</span>
                                </p>
                                <p class="text-primary-color text-xl md:text-2xl">
                                    nos processos
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div
            class="relative flex flex-col lg:flex-row items-center gap-8 sm:gap-10 lg:gap-20 px-4 sm:px-6 md:px-20 lg:px-40 pb-10 sm:pb-12 md:pb-16 pt-10 sm:pt-12 md:pt-16 fade-in-contrario"
        >
            <div
                class="flex flex-col bg-linear-0 from-primary-color to-secondary-color h-[300px] w-[280px] sm:h-[400px] sm:w-[350px] md:h-[500px] md:w-[400px] rounded-md overflow-visible relative shadow-2xl shrink-0"
            >
                <img
                    src="./img-obras-capacete.jpg"
                    class="absolute top-3 left-3 sm:top-5 sm:left-5 h-[300px] w-[280px] sm:h-[400px] sm:w-[350px] md:h-[500px] md:w-[400px] object-cover rounded-md shadow-lg z-10"
                />
            </div>
            <div class="flex flex-col gap-3 sm:gap-4 w-full">
                <div class="flex flex-col gap-1">
                    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold gradient-text leading-tight">Atuação</h1>
                    <h3 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold gradient-text">Um pouco do nosso trabalho!</h3>
                </div>
                <div class="w-[60%] h-1 bg-linear-to-r from-primary-color to-secondary-color rounded-full"></div>
                <p class="text-sm sm:text-base lg:text-lg font-medium text-gray-700 mt-2 text-justify">Lorem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpis imperdiet massa ac senectus gravida. orem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpis imperdiet massa ac senectus gravida. orem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpismperdiet massa ac senectus gravida. orem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpis imperdiet massa ac senectus gravida.</p>
            </div>
        </div>

        <!-- Seção Conheça Nossos Serviços -->
        <div class="w-full py-12 sm:py-16 md:py-20 fade-in-contrario">
            <div class="flex flex-col items-center text-center gap-3 sm:gap-4 mb-12 sm:mb-14 md:mb-16 px-4 sm:px-6 md:px-20 lg:px-40">
                <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold gradient-text leading-[1.2] pb-2">Conheça Nossos Serviços</h2>
                <div class="w-64 sm:w-80 md:w-96 h-1 bg-linear-to-r from-primary-color to-secondary-color rounded-full"></div>
                <h3 class="text-base sm:text-lg md:text-xl lg:text-2xl font-semibold gradient-text">O que podemos fazer com você?</h3>
            </div>

            <!-- Grid de 4 imagens -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-0 w-full">
                <!-- Serviço 1 - Mentorias -->
                <div class="relative h-[300px] sm:h-[350px] md:h-[400px] overflow-hidden group">
                    <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-all duration-300"></div>
                    <img
                        src={`${basePath}/img-mentorias.png`}
                        alt="Mentorias sobre questões jurídicas em obras"
                        class="w-full h-full object-cover"
                    />
                    <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-5 md:p-6 text-white h-[120px] sm:h-[130px] md:h-[140px] flex flex-col">
                        <h4 class="text-base sm:text-lg md:text-xl font-bold mb-1 sm:mb-2 leading-tight h-12 sm:h-13 md:h-14">Mentorias sobre questões jurídicas em obras</h4>
                        <p class="text-xs sm:text-sm leading-relaxed">Aqui te ajudamos a como fazer a sua obra da forma mais inteligente!</p>
                    </div>
                </div>

                <!-- Serviço 2 - Planejamento -->
                <div class="relative h-[300px] sm:h-[350px] md:h-[400px] overflow-hidden group">
                    <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-all duration-300"></div>
                    <img
                        src={`${basePath}/img-planejamento.png`}
                        alt="Planejamento conjunto"
                        class="w-full h-full object-cover"
                    />
                    <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-5 md:p-6 text-white h-[120px] sm:h-[130px] md:h-[140px] flex flex-col">
                        <h4 class="text-base sm:text-lg md:text-xl font-bold mb-1 sm:mb-2 leading-tight h-12 sm:h-13 md:h-14">Planejamento conjunto</h4>
                        <p class="text-xs sm:text-sm leading-relaxed">Aqui te ajudamos a como fazer a sua obra da forma mais inteligente!</p>
                    </div>
                </div>

                <!-- Serviço 3 - Cálculo -->
                <div class="relative h-[300px] sm:h-[350px] md:h-[400px] overflow-hidden group">
                    <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-all duration-300"></div>
                    <img
                        src={`${basePath}/img-calculo.png`}
                        alt="Cálculo de gastos e dicas para economizar em taxas"
                        class="w-full h-full object-cover"
                    />
                    <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-5 md:p-6 text-white h-[120px] sm:h-[130px] md:h-[140px] flex flex-col">
                        <h4 class="text-base sm:text-lg md:text-xl font-bold mb-1 sm:mb-2 leading-tight h-12 sm:h-13 md:h-14">Cálculo de gastos e dicas para economizar em taxas</h4>
                        <p class="text-xs sm:text-sm leading-relaxed">Aqui te ajudamos a como fazer a sua obra da forma mais inteligente!</p>
                    </div>
                </div>

                <!-- Serviço 4 - Gerenciamento -->
                <div class="relative h-[300px] sm:h-[350px] md:h-[400px] overflow-hidden group">
                    <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-all duration-300"></div>
                    <img
                        src={`${basePath}/img-gerenciamento.png`}
                        alt="Gerenciamento de projetos na parte jurídica"
                        class="w-full h-full object-cover"
                    />
                    <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-5 md:p-6 text-white h-[120px] sm:h-[130px] md:h-[140px] flex flex-col">
                        <h4 class="text-base sm:text-lg md:text-xl font-bold mb-1 sm:mb-2 leading-tight h-12 sm:h-13 md:h-14">Gerenciamento de projetos na parte jurídica</h4>
                        <p class="text-xs sm:text-sm leading-relaxed">Aqui te ajudamos a como fazer a sua obra da forma mais inteligente!</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Seção Robustez e Inovação -->
        <div class="w-full py-12 sm:py-16 md:py-20 fade-in-contrario">
            <div class="flex flex-col items-center text-center gap-3 sm:gap-4 mb-8 sm:mb-10 px-4 sm:px-6 md:px-20 lg:px-40">
                <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-bold gradient-text leading-[1.2] pb-2">
                    Robustez e inovação na defesa dos<br />seus interesses
                </h2>
                <div class="w-64 sm:w-80 md:w-96 h-1 bg-linear-to-r from-primary-color to-secondary-color rounded-full"></div>
                <h3 class="text-base sm:text-lg md:text-xl lg:text-2xl font-semibold gradient-text">Legalize Obras trabalhando para você</h3>
            </div>

            <!-- Texto centralizado e justificado -->
            <div class="px-4 sm:px-6 md:px-20 lg:px-40 max-w-6xl mx-auto">
                <p class="text-sm sm:text-base lg:text-lg text-gray-700 text-justify leading-relaxed">
                    Lorem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpis imperdiet massa ac senectus gravida. orem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpis imperdiet massa ac senectus gravida. orem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpismperdiet massa ac senectus gravida. orem ipsum dolor sit amet consectetur. Volutpat ultrices amet vivamus nibh nulla ipsum. Tellus leo lorem turpis imperdiet massa ac senectus gravida.
                </p>
            </div>
        </div>

        <!-- Seção Cards com Ícones -->
        <div class="w-full pt-0 pb-12 sm:pb-16 md:pb-20 fade-in-contrario">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 max-w-6xl mx-auto px-4 sm:px-6 md:px-20 lg:px-40">
                <!-- Card 1 - Ética -->
                <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 flex flex-col items-center text-center">
                    <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-full bg-linear-90 from-primary-color to-secondary-color flex items-center justify-center mb-4 sm:mb-6">
                        <span class="material-symbols-outlined text-white text-4xl sm:text-5xl">
                            verified
                        </span>
                    </div>
                    <h3 class="text-xl sm:text-2xl font-bold gradient-text mb-2 sm:mb-3">Ética</h3>
                    <p class="text-sm sm:text-base text-primary-color">Atuação baseada na integridade e no respeito.</p>
                </div>

                <!-- Card 2 - Placeholder -->
                <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 flex flex-col items-center text-center">
                    <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-full bg-linear-90 from-primary-color to-secondary-color flex items-center justify-center mb-4 sm:mb-6">
                        <span class="material-symbols-outlined text-white text-4xl sm:text-5xl">
                            handshake
                        </span>
                    </div>
                    <h3 class="text-xl sm:text-2xl font-bold gradient-text mb-2 sm:mb-3">Compromisso</h3>
                    <p class="text-sm sm:text-base text-primary-color">Dedicação total aos seus objetivos.</p>
                </div>

                <!-- Card 3 - Placeholder -->
                <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 flex flex-col items-center text-center">
                    <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-full bg-linear-90 from-primary-color to-secondary-color flex items-center justify-center mb-4 sm:mb-6">
                        <span class="material-symbols-outlined text-white text-4xl sm:text-5xl">
                            lightbulb
                        </span>
                    </div>
                    <h3 class="text-xl sm:text-2xl font-bold gradient-text mb-2 sm:mb-3">Inovação</h3>
                    <p class="text-sm sm:text-base text-primary-color">Soluções criativas e modernas.</p>
                </div>
            </div>
        </div>

        <!-- Componente de Contato -->
        <Contact client:load />
    </div>
    <script>
        const animarNumero = (id: string, temp: number) => {
            const element = document.getElementById(id);
            if (!element) return;

            const numeroFormatado = parseInt(
                element.innerHTML.replace(/[^0-9]/g, ""),
            );
            for (let i = 0; i <= numeroFormatado; i++) {
                setTimeout(() => {
                    element.innerHTML = i + "%";
                }, i * temp);
            }
        };

        document.addEventListener("DOMContentLoaded", () => {
            animarNumero("200", 10);
            animarNumero("50", 50);
            animarNumero("40", 50);
        });
    </script>
</Layout>
