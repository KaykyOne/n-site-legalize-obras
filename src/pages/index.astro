---
import Layout from "../layouts/Layout.astro";
import Button from "../components/button";
---

<Layout>
    <div class="w-full min-h-screen flex flex-col">
        <div class="relative">
            <div class="absolute w-full h-full">
                <div class="absolute bg-black/70 w-full h-full backdrop-blur-sm"></div>
                <img class="w-full h-full object-cover" src="./img-back-home.png" alt="Fundo"/>
            </div>

            <div class="relative flex flex-col px-6 md:px-20 lg:px-40">
                <div class="pt-32 md:pt-40 pb-20 md:pb-40 text-white z-10 text-center md:text-left">
                    <h4 class="text-3xl sm:text-4xl md:text-5xl font-semibold mb-2">Pare de Pagar</h4>
                    <h1 class="text-5xl sm:text-7xl md:text-8xl lg:text-9xl uppercase font-bold leading-tight mb-2">
                        INSS de Obra
                    </h1>
                    <h4 class="text-3xl sm:text-4xl md:text-5xl font-semibold mb-4">
                        Reduza Legalmente em Até 80%
                    </h4>
                    <p class="text-neutral-300 mt-6 text-base sm:text-lg">
                        Especialistas em contribuições de obras ao INSS
                    </p>

                    <div class="flex flex-col sm:flex-row gap-5 mt-10 items-center sm:items-start justify-center md:justify-start">
                        <Button
                            type={"primario"}
                            className={"!text-lg sm:!text-xl !font-normal !uppercase w-full sm:w-auto"}
                        >
                            Saiba Mais
                        </Button>
                        <Button
                            type={"transparente"}
                            className={"!text-lg sm:!text-xl !font-normal !uppercase flex items-center justify-center w-full sm:w-auto"}
                        >
                            <img
                                src="/n-site-legalize-obras/icon-whatsapp.png"
                                alt="WhatsApp Icon"
                                class="w-5 h-5 mr-2 group-hover:invert"
                            />
                            FALE COM UM ESPECIALISTA
                        </Button>
                    </div>
                </div>
            </div>
        </div>

        <div class="px-6 md:px-20 lg:px-40 -mt-70 md:mt-[-30px] relative fade-in-contrario">
            <div class="bg-primary-color min-h-[300px] md:min-h-[500px] rounded-md"></div>
        </div>


    </div>
</Layout>
